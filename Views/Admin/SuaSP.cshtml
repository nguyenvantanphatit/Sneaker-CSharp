@model Sneaker.Models.SANPHAM

@{ ViewBag.Title = "SuaSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<h3 style="text-align:center;color:red;">ĐIỀU CHỈNH SẢN PHẨM</h3>
<div class="container">

    <div class="row">

        <div class="col-md-3">

            <div class="list-group">
            </div>
        </div>

        <div class="col-md-9">

            <div class="row carousel-holder">

                <div class="col-md-12">
                    <table class="table">
                        @using (Html.BeginForm())
                        {
            @Html.AntiForgeryToken()
                            <div class="container">
                                <div class="form-horizontal">
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.MASP)

                                    <div class="form-group">
                                        TÊN SẢN PHẨM
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        GIÁ BÁN
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.EditorFor(model => model.GIABAN, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.GIABAN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        ẢNH BÌA
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.EditorFor(model => model.ANHBIA, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ANHBIA, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        MÔ TẢ
                                        <div class="col-md-10" style="width:300px;">
                                            <textarea name="MOTA" rows="10" cols="40"> @Model.MOTA  </textarea>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        NGÀY SẢN XUẤT
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.EditorFor(model => model.NGAYSANXUAT, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NGAYSANXUAT, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        NƠI SẢN XUẤT
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.EditorFor(model => model.NOISANXUAT, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NOISANXUAT, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        SỐ LƯỢNG
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.EditorFor(model => model.SL, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SL, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        MÃ LOẠI
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.DropDownList("MALOAI")

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        MÃ NHÀ CUNG CẤP
                                        <div class="col-md-10" style="width:300px;">
                                            @Html.DropDownList("MANCC")
                                        </div>
                                    </div>

                                    <div class="form-group" style="margin-top:15px">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Lưu" class="btn btn-danger" />
                                        </div>
                                    </div>
                                </div>
                            </div>}


                    </table>
                </div>
                <div style="margin-top:10px">
                    @Html.ActionLink("Quay Lại", "SanPham")
                </div>
            </div>
        </div>
    </div>
</div>




